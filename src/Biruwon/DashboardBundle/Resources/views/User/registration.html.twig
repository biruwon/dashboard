{% extends '@Dashboard/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">

    </style>
{% endblock %}

{% block wrapper %}

    {{ form_start(form, {'attr': {'class':'form-horizontal', 'role':'form'} }) }}

    <div class="form-group">
        <label for="user_email" class="col-lg-2 control-label">Email</label>
        <div class="col-lg-2">
            {{ form_widget(form.email) }}
        </div>
    </div>

    <div class="form-group">
        <label for="user_username" class="col-lg-2 control-label">Username</label>
        <div class="col-lg-2">
            {{ form_widget(form.username) }}
        </div>
    </div>

    <div class="form-group">
        <label for="user_password" class="col-lg-2 control-label">Password</label>
        <div class="col-lg-2">
            {{ form_widget(form.password.first) }}
        </div>
    </div>

    <div class="form-group">
    	<label for="user_password" class="col-lg-2 control-label">Repeat it</label>
    	<div class="col-lg-2">
    		{{ form_widget(form.password.second) }}
    	</div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          {{ form_widget(form.register) }}
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}

    {{ parent() }}

{% endblock %}
